<!DOCTYPE html>
{% extends "base.html" %}
{% block title %}
    {{ title }}
{% endblock title %}
{% block content %}
    {% for revision in revisions %}
        <div class="post">
            <div class="post-id">
                {{ revision.key().id() }}
            </div>
            <div class="post-content">
                {{ revision.body }}
            </div>
            <div class="post-view-link">
                <a href="{{ title }}?v={{ revision.key().id() }}">view</a>
            </div>
            <div class="post-edit-link">
                <a href="/_edit{{ title }}?v={{ revision.key().id() }}">edit</a>
            </div>
        </div>
    {% endfor %}
{% endblock %}

