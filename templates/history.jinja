<!DOCTYPE html>
{% extends "base.html" %}
{% block title %}
    History - {{ page_name }}
{% endblock title %}
{% block content %}
    {% if revisions %}
        {% for revision in revisions %}
        <div class="post">
            <div class="post-id">
                {{ revision.key().id() }}
            </div>
            <div class="post-content">
                {{ revision.body }}
            </div>
            <div class="post-view-link">
                <a href="{{ title }}?v={{ revision.key().id() }}">view</a>
            </div>
            <div class="post-edit-link">
                <a href="/_edit{{ title }}?v={{ revision.key().id() }}">edit</a>
            </div>
        </div>
        {% endfor %}
    {% else %}
        <div class="error">This page has no edits.</div>
    {% endif %}
{% endblock %}

